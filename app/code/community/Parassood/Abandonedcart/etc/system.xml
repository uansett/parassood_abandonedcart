<config>
    <tabs>
        <parassood translate="label" module="parassood_abandonedcart">
            <label>Abandoned Cart</label>
            <sort_order>400</sort_order>
        </parassood>
    </tabs>
    <sections>
        <parassood_abandonedcart translate="label" module="parassood_abandonedcart">
            <label>Abandoned Cart</label>
            <tab>parassood</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Abandoned Cart Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label" module="parassood_abandonedcart">
                            <label>Is Abandoned Cart Enabled?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <sender_name translate="label" module="parassood_abandonedcart">
                            <label>Abandoned Cart Emails - Sender Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sender_name>
                        <sender_email translate="label" module="parassood_abandonedcart">
                            <label>Abandoned Cart Emails - Sender Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sender_email>
                    </fields>
                </settings>
            </groups>
        </parassood_abandonedcart>
    </sections>
</config>
